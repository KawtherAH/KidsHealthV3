<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".AccountInfoActivity">

    <!--
  android:shadowColor="@color/MainBlue"
      android:shadowDx="1.5"
      android:shadowDy="1.3"
      android:shadowRadius="1.6"
      android:padding="5dp"-->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:padding="5dp"
        android:shadowColor="@color/white"
        android:shadowDx="5"
        android:shadowDy="0.5"
        android:shadowRadius="5"
        android:text="@string/TITLE"
        android:textColor="@color/MainBlue"
        android:textSize="44sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Account Information"
        android:textColor="@color/white"
        android:textSize="27sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/new_user_btn"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <EditText
            android:id="@+id/editPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/register_edit_text"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="@color/LightGray"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="16dp"
            />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/register_edit_text"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColorHint="@color/LightGray"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="16dp"/>

        <EditText
            android:id="@+id/EditPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/register_edit_text"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="@color/LightGray"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:drawablePadding="16dp"/>

        <EditText
            android:id="@+id/ConfirmPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/register_edit_text"
            android:ems="10"
            android:hint="Confirm Password"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="@color/LightGray"
            android:textSize="18sp"
            android:paddingStart="26dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/accountBtn"
        android:layout_width="226dp"
        android:layout_height="48dp"
        android:layout_margin="25dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_shape"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>